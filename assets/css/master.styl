@import '_settings'

normalize-css()
base()

body
  background: #f89c48
  font-family: "Source Sans Pro", "Helvetica Neue", helvetica
  margin: 0
  padding: 0
  color: white

  section
    position fixed
    top 50%
    left 50%
    -webkit-transform translate(-50%, -50%)
    transform translate(-50%, -50%)
    max-width 600px
    text-align center

  p
    font-size 18px
    line-height 1.4
    opacity 0.7

  a
    color white
